<body>
    <a href="/fidofame">Back to Famous Dogs</a>
    <h1>New Famous Dog</h1>
    <div class="row">
        <form class="col s12"  action="/fidofame" method="POST">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="name">
              <label for="name">Name</label>
            </div>
            <div class="input-field col s12">
              <input name="image" type="text">
              <label for="image">Image</label>
            </div>
            <div class="input-field col s12">
                <input name="breed" type="text">
                <label for="breed">Breed</label>
            </div>
            <div class="input-field col s12">
                <select name="renown">
                    <option></option>
                    <option value="Film">Film</option>
                    <option value="TV">TV</option>
                    <option value="Cartoon">Cartoon</option>
                    <option value="Social Media">Social Media</option>
                </select>
                <label>Claim to Fame</label>
            </div>
            <div class="input-field col s12">
                <textarea name="description" class="materialize-textarea"></textarea>
                <label for="description">Description</label>
            </div>
            <p>
                <label>
                    <input type="checkbox" name="deceased" class="filled-in" />
                    <span>Deceased</span>
                </label>
            </p>
            <button type="submit" id="" class="btn waves-effect waves-light blue-grey darken-4">Submit
                <i class="material-icons right">send</i>
            </button>
            </div>
        </form>
    </div>
    <script>
    $(document).ready(function(){
        $('select').formSelect();
    });
    
    $(document).ready(function() {
        $('input#input_text, textarea#textarea2').characterCounter();
    });
    
    </script>
</body>
