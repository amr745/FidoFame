    <h1>Edit <%=fido.name%></h1>

    <div class="row">
        <form class="col s12" action="/fidofame/<%=fido._id%>?_method=PUT" method="POST">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" value="<%=fido.name%>" id="name" class="validate">
              <label for="name">Name</label>
            </div>
            <div class="input-field col s12">
              <input id="image" type="text" value="<%=fido.image%>" class="validate">
              <label for="image">Image</label>
            </div>
            <div class="input-field col s12">
                <input id="breed" type="text" value="<%=fido.breed%>" class="validate">
                <label for="breed">Breed</label>
            </div>
            <div class="input-field col s12">
                <select>
                    <option value="<%=fido.renown%>" disabled selected><%=fido.renown%></option>
                    <option value="Film">Film</option>
                    <option value="TV">TV</option>
                    <option value="Cartoon">Cartoon</option>
                    <option value="Social Media">Social Media</option>
                </select>
                <label>Claim to Fame</label>
            </div>
            <div class="input-field col s12">
                <textarea id="description" class="materialize-textarea"><%=fido.description%></textarea>
                <label for="description">Description</label>
            </div>
            <p>
                <label>
                    <input type="checkbox" id="deceased" class="filled-in" <%= fido.deceased && "checked" %> />
                    <span>Deceased</span>
                </label>
            </p>
        </div>
        <button type="submit" id="" class="btn waves-effect waves-light">Submit Changes
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
